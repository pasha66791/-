            int patientAdmissionTime = 10;
            int numberOfGrandmothers;
            int hour = 60;
            int waitingTimeInHours;
            int waitingTimeInMinutes;
            Console.WriteLine("В поликлинике куча бабушек в очереди в регистратуру.");
            Console.Write("Введите кол-во бабушек в очереди:");
            numberOfGrandmothers = Convert.ToInt32(Console.ReadLine());
            waitingTimeInHours = (patientAdmissionTime * numberOfGrandmothers) / hour;
            waitingTimeInMinutes = (patientAdmissionTime * numberOfGrandmothers) % hour;
            Console.WriteLine($"Стоять придется {waitingTimeInHours} часа и {waitingTimeInMinutes} минут.");

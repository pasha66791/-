            Random rand = new Random();
            int number = rand.Next(0, 100);
            int amount = 0;
            int multiplesOfThree = 3;
            int multiplesOfFive = 5;

            for (int i = amount; i <= number; i++)
            {
                if (i % multiplesOfThree == 0 || i % multiplesOfFive == 0)
                {
                    Console.WriteLine(i);
                    amount += i;
                }
            }

                Console.WriteLine("Диапазон: от 0 до " + number + ".\nСумма чисел кратных 3 или 5 равна: " + amount);
